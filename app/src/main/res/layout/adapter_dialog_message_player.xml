<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_marginTop="96dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/dialog_example_message_bottom_margin">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/example_message_icon_bottom_margin"
            android:rotation="270"
            app:srcCompat="@drawable/ic_message_player"/>

        <TextView
            android:id="@+id/dialog_example_message"
            style="@style/DialogExampleMessagePlayerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/example_message_right_margin"
            android:layout_marginRight="@dimen/example_message_right_margin"
            android:background="@drawable/shape_rounded_corners_player"
            android:gravity="right"
            android:paddingBottom="@dimen/dialog_example_message_padding"
            android:paddingLeft="@dimen/dialog_example_message_left_right_padding"
            android:paddingRight="@dimen/dialog_example_message_left_right_padding"
            android:paddingTop="@dimen/dialog_example_message_padding"
            tools:text="Lorem ipsum lorem ipsum lorem ipsum"/>

    </FrameLayout>

</LinearLayout>