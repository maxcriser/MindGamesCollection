<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--android:fontFamily="sans-serif"           // current BOLD MAIN roboto regular-->
    <!--android:fontFamily="sans-serif-light"     // current THIN MAIN roboto light-->

    <!--android:fontFamily="sans-serif-condensed" // roboto condensed-->
    <!--android:fontFamily="sans-serif-black"     // roboto black-->
    <!--android:fontFamily="sans-serif-thin"      // roboto thin (android 4.2)-->
    <!--android:fontFamily="sans-serif-medium"    // roboto medium (android 5.0)-->
    <style name="GameFragmentTitleStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">@integer/GAME_FRAGMENT_TITLE_MAX_LINES</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/game_fragment_header_text_title_size</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">@integer/TOOLBAR_TEXT_MAX_LINES</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GameFragmentDescriptionStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:maxLines">@integer/GAME_FRAGMENT_DESCRIPTION_MAX_LINES</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/game_fragment_header_text_description_size</item>
    </style>

    <style name="DrawerButtonStyle">
        <item name="android:textColor">@color/drawer_item_text</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/ripple_drawer_item</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:layout_height">@dimen/drawer_item_button_height</item>
        <item name="android:lines">@integer/DRAWER_BUTTON_MAX_LINES</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabLayoutGameStyle">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:background">@color/toolbar_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RulesTitleStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/game_fragment_rules_text_title_size</item>
    </style>

    <style name="RulesDescriptionStyle">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/game_fragment_rules_text_description_size</item>
    </style>

    <style name="DialogExampleMessageTextStyle">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/dialog_example_text_message_size</item>
    </style>

    <style name="DialogExampleMessagePlayerStyle" parent="DialogExampleMessageTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogExampleMessagePresenterStyle" parent="DialogExampleMessageTextStyle">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="DialogExampleMessageInformationStyle" parent="DialogExampleMessageTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PrimaryButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">@dimen/play_button_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>